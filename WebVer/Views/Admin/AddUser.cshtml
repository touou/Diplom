@model AddUserViewModel

@{
    ViewBag.Title = "Add User";
}

<div class="login-form" style="margin-left: 0% !important; margin-top: 0% !important;">
  <form asp-action="AddUser" method="post">
    <h1>Add new user</h1>
    <div class="content">
      <div asp-validation-summary="ModelOnly"></div>
      <div class="input-field">
        <input asp-for="Email" placeholder="Email" autocomplete="nope">
      </div>
      <div class="input-field">
        <input asp-for="Name" placeholder="Name">
      </div>
      <div class="input-field">
        <input type="password" asp-for="Password" placeholder="Password" autocomplete="new-password">
      </div>
    </div>
    <div class="action">
      <button type="submit">Add User</button>
    </div>
  </form>
</div>

